  <div class="col-md-6">
    <h3>Create a New Order:</h3>

    <form class="form new-order-form">
      <div class="form-group">
        <label for="order-name">order name:</label>
        <input class="form-input" type="text" id="order-name" name="order-name" />
      </div>
      <div class="form-group">
        <label for="total-order">Total ($):</label>
        <input class="form-input" type="number" id="total-order" name="total-order" />
      </div>
      <div class="form-group">
        <label for="order-desc">description:</label>
        <textarea class="form-input" id="order-desc" name="order-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      {{!-- <div class="submit order">
