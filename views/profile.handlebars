<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Order:</h3>

    <form class="form new-order-form">
      <div class="form-group">
        <label for="order-name">order name:</label>
        <input class="form-input" type="text" id="order-name" name="order-name" />
      </div>
      <div class="form-group">
        <label for="total-order">Total ($):</label>
        <input class="form-input" type="number" id="total-order" name="total-order" />
      </div>
      <div class="form-group">
        <label for="order-desc">description:</label>
        <textarea class="form-input" id="order-desc" name="order-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
      <div class="submit order">
        <button type="submit" class="btn btn-primary">Submit Order</button>
      </div>
    </form>
  </div>

  {{#if order.length}}
  <div class="col-md-6 order-list">
    <h3>Current Order:</h3>

    {{!-- {{#each order as |user or id|}} --}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/order/{{order.id}}">{{order.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{order.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
<script src="./js/mailer.js"></script>