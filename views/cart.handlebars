{{#if products}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{#each products as |product| }}
            <li class="list-group-item">
                <strong>{{product.item.name}} {{product.qty}}</strong>
                <p></p>
                <img src="/images/Products/{{product.item.img}}" alt="{{img}}" width="80" height="80">
                <p>Description: {{product.item.description}}</p>
                <span class="label label-success">item cost: ${{product.price}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total ${{totalPrice}}:</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" class="btn btn-success" role="button">Checkout</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No items in Cart</h2>
    </div>
</div>
{{/if}}